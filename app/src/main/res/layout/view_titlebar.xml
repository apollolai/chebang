<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="46dp">
    <ImageButton
        android:id="@+id/imagebutton_left"
        android:background="@drawable/btn_title_left"
        android:layout_width="45dp"
        android:layout_height="fill_parent"
        android:src="@drawable/bt_common_back"
        android:layout_alignParentLeft="true"
        android:contentDescription="@null" />
    <TextView
        android:textSize="19sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxEms="8"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <ImageButton
        android:id="@+id/imagebutton_right"
        android:background="@drawable/btn_title_right"
        android:layout_width="45dp"
        android:layout_height="fill_parent"
        android:src="@drawable/bt_common_close"
        android:layout_alignParentRight="true"
        android:contentDescription="@null" />
    <Button
        android:textSize="13dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/imagebutton_right_text"
        android:background="@drawable/btn_title_next"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginRight="8dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>